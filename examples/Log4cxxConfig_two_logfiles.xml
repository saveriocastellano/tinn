<?xml version="1.0" encoding="UTF-8" ?>
 <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
 <appender name="RollingAppender" class="org.apache.log4j.rolling.RollingFileAppender">
       <param name="File" value="./log/tinn.log" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
	<param name="MaxBackupIndex" value="2" />
	<param name="MaxFileSize" value="10GB" />
 	<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
		<param name="FileNamePattern" value="./log/tinn.%d{yyyy-MM-dd}.log" />
                <param name="MaxFileSize" value="10GB" />
		<param name="MaxBackupIndex" value="10" />
	</rollingPolicy>
       <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="[%p] %d %m%n"/>          
       </layout>
  </appender>

  <appender name="RollingAppender" class="org.apache.log4j.rolling.RollingFileAppender">
       <param name="File" value="./log/mylogger.log" />
       <param name="DatePattern" value="'.'yyyy-MM-dd" />
	<param name="MaxBackupIndex" value="2" />
	<param name="MaxFileSize" value="10GB" />
 	<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
		<param name="FileNamePattern" value="./log/mylogger.%d{yyyy-MM-dd}.log" />
                <param name="MaxFileSize" value="10GB" />
		<param name="MaxBackupIndex" value="10" />
	</rollingPolicy>
       <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="[%p] %d %m%n"/>          
       </layout>
  </appender>
 
  <mylogger>
        <priority value="all" />
        <appender-ref ref="RollingAppenderMyLogger"/>
  </mylogger>

  
  <root>
        <priority value="all" />
        <appender-ref ref="RollingAppender"/>
  </root>
 </log4j:configuration>
